generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model client {
  uid        String @id @unique
  name       String @unique
  created_at Int
  updated_at Int
}

model invoice {
  invoice_id           String          @id @unique
  user_name            String
  store_name           String
  status               payment_status?
  total_shopping       BigInt?
  total_bill           BigInt?
  payment_fee          Int?
  payment_method       String?
  description          String?         @db.Text
  paid_at              Int?
  shipping_information String?         @db.Text
  expiry_date          Int?
  shipping_cost        Int
  created              Int
  updated              Int

  invoice_items invoice_items[]
}

model invoice_items {
  id          Int     @id @default(autoincrement())
  invoice_id  String
  name        String
  category    String?
  quantity    Int
  unit_price  Int
  total_price Int
  weight      String

  invoice invoice @relation(fields: [invoice_id], references: [invoice_id], onDelete: Cascade)
}

enum payment_status {
  unpaid
  pending
  paid
  expired
  refunded
}
